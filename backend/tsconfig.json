{
  "compilerOptions": {
    "outDir": "./dist",                // ✅ compiled JS files go here
    "rootDir": "./",                   // ✅ treat project root as base
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2020",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
